{
  "name": "hono-svelte-5",
  "version": "1.0.0",
  "author": "Lukas Mayr",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Frontend built, ready to deploy'",
    "deploy": "npm run build && cd backend && wrangler deploy --minify src/worker.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev"
  },
  "main": "index.ts",
  "module": "index.ts",
  "dependencies": {
    "eslint-config-prettier": "^10.0.2",
    "hono": "^4.7.4"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "bugs": {
    "url": "https://github.com/malua/hono-svelte-5/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/malua/hono-svelte-5.git"
  },
  "description": "A full-stack project using Hono as the backend framework and Svelte 5 for the frontend.",
  "keywords": [
    "Hono",
    "Svelte 5",
    "Sveltekit",
    "Cloudflare Workers",
    "SQLite",
    "Drizzle ORM",
    "Zod",
    "Tailwind CSS",
    "Tailwind 4",
    "ShadCN-Svelte"
  ],
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ]
}
